<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/View/Style/Base.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="BackgroundLight" TargetType="{x:Type Grid}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#fff" Offset="0" />
                    <GradientStop Color="#E8EAF6" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ImageBackground"
           TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/EESDD;component/View/Image/peter-court-45419.jpg" 
                    Stretch="UniformToFill" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SimpleBackground"
           TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/EESDD;component/View/Image/Minimalistic_technology_circuits_1920x1200.jpg" 
                    Stretch="UniformToFill" 
                            Opacity="0.05"/>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>