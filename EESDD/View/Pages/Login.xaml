<Page x:Class="EESDD.View.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="538" d:DesignWidth="1000"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch"
      Background="#342947">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Style/Login.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Image Source="/EESDD;component/View/Image/grey_car.png"
                   Margin="100"></Image>
        </Grid>
        <Grid Grid.Column="1"
              Margin="30, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource SwitchButton}"
                    Click="LeftButton_Click"
                    x:Name="LeftButton"
                    ToolTip="登录"
                    Visibility="Hidden">
                <Image Source="/EESDD;component/View/Image/chevron-left_200_0_cccccc.png"
                       />
            </Button>
            <Canvas Grid.Column="1"
                    x:Name="PanelCanvas">
                <Border Height="240" Width="250"
                    Style="{StaticResource Box}"
                    x:Name="LoginPanel"
                    Visibility="Visible"
                    >
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource BoxTitle}">
                        登录
                            </TextBlock>
                            <Button Style="{StaticResource NoDefaultBlue}"
                                Margin="60, 50, 0, 5"
                                Cursor="Hand"
                                x:Name="RegularButton"
                                Click="RegularButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="15" Height="15" 
                                       Source="/EESDD;component/View/Image/user_50_0_333333.png"
                                       />
                                    <TextBlock Foreground="#888"
                                           Margin="5"
                                           FontSize="11">
                                    普通用户
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource NoDefaultBlue}"
                                Margin="60, 50, 0, 5"
                                Cursor="Hand"
                                Visibility="Collapsed"
                                x:Name="AdminButton"
                                Click="AdminButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="15" Height="15" 
                                       Source="/EESDD;component/View/Image/user-secret_50_0_333333.png"
                                       />
                                    <TextBlock Foreground="#888"
                                           Margin="5"
                                           FontSize="11">
                                    管理员
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                Margin="0, 10"
                                VerticalAlignment="Center">
                            <Image Source="/EESDD;component/View/Image/user_50_0_333333.png"
                               Style="{StaticResource BoxImage}"></Image>
                            <TextBox Style="{StaticResource BoxTextBox}"
                                 ToolTip="请输入用户名">
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                Margin="0, 10"
                                VerticalAlignment="Center">
                            <Image Source="/EESDD;component/View/Image/key_50_0_333333.png"
                                Style="{StaticResource BoxImage}"></Image>
                            <PasswordBox Style="{StaticResource BoxPasswordBox}"
                                 ToolTip="请输入密码"></PasswordBox>
                        </StackPanel>
                        <StackPanel>
                            <Button Style="{StaticResource BoxButton}"
                                Margin="0, 20">
                                <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                    <TextBlock
                                    Margin="105, 0, 10, 0">登录</TextBlock>
                                    <Image Source="/EESDD;component/View/Image/enter_50_0_333333.png" 
                                       Width="20" Height="20"
                                       Margin="0, 0, 90, 0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Box}"
                    Height="400" Width="250"
                    x:Name="RegisterPanel"
                    Visibility="Hidden"
                    Opacity="0" >
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                Margin="0, 0, 0, 20">
                            <TextBlock Style="{StaticResource BoxTitle}">
                        注册
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            用户名</TextBlock>
                            <TextBox Style="{StaticResource RegTextBox}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            密码</TextBlock>
                            <PasswordBox Style="{StaticResource RegPasswordBox}" />
                            <Image Source="/EESDD;component/View/Image/question-circle_50_0_333333.png" 
                               Width="15" Height="15"
                               Margin="10, 0"
                               ToolTip="密码可为空"
                               Opacity="0.7"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            真实姓名</TextBlock>
                            <TextBox Style="{StaticResource RegTextBox}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            性别</TextBlock>
                            <RadioButton GroupName="Gender"
                                     Style="{StaticResource RegRadioButton}"
                                     IsChecked="True">
                                <Image Source="/EESDD;component/View/Image/male-symbol_50_0_333333.png" 
                                   Style="{StaticResource RegRadioButtonImage}"/>
                            </RadioButton>
                            <RadioButton GroupName="Gender"
                                     Style="{StaticResource RegRadioButton}">
                                <Image Source="/EESDD;component/View/Image/female-symbol_50_0_333333.png" 
                                   Style="{StaticResource RegRadioButtonImage}"/>
                            </RadioButton>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            年龄</TextBlock>
                            <TextBox Style="{StaticResource RegTextBox}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            身高</TextBlock>
                            <TextBox Style="{StaticResource RegTextBoxWithUnit}" />
                            <TextBlock Style="{StaticResource RegUnit}">
                            cm
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            体重</TextBlock>
                            <TextBox Style="{StaticResource RegTextBoxWithUnit}" />
                            <TextBlock Style="{StaticResource RegUnit}">
                            kg
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            驾龄</TextBlock>
                            <TextBox Style="{StaticResource RegTextBoxWithUnit}" />
                            <TextBlock Style="{StaticResource RegUnit}">
                            年
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            职业</TextBlock>
                            <TextBox Style="{StaticResource RegTextBox}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RegTitle}">
                            联系方式</TextBlock>
                            <TextBox Style="{StaticResource RegTextBox}" />
                        </StackPanel>

                        <StackPanel>
                            <Button Style="{StaticResource BoxButton}"
                                Margin="0, 20">
                                <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                    <TextBlock
                                    Margin="105, 0, 10, 0">
                                    注 册
                                    </TextBlock>
                                    <Image Source="/EESDD;component/View/Image/pencil_50_0_333333.png" 
                                       Width="20" Height="20"
                                       Margin="0, 0, 90, 0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Canvas>
            <Button Grid.Column="2"
                    Style="{StaticResource SwitchButton}"
                    Click="RightButton_Click"
                    x:Name="RightButton"
                    ToolTip="注册">
                <Image Source="/EESDD;component/View/Image/chevron-right_200_0_cccccc.png"
                       />
            </Button>
        </Grid>
    </Grid>
</Page>
